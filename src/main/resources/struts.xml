<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts 
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<!-- config file for the Struts 2.0 Hello World Tutorial -->
<struts>
	<package name="default" extends="struts-default" namespace="/">
		<interceptors>
			<interceptor class="com.notekeeper.model.LoginInterceptor" name="loginInterceptor">
			</interceptor>
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<global-results>
			<result name="login">/login.html</result>
		</global-results>
		<action name="login"
			class="com.notekeeper.controller.LoginAction" method="login">
			          
			<result name="success" type ="redirect">indexaction.action</result>
			<result name="fail">/loginError.jsp</result>
		</action>

		<action name="createuser"
			class="com.notekeeper.controller.CreateUserAction" method="execute">
			<result name="Data entered succesfully">/accountCreated.jsp</result>
		</action>
		<action name="indexaction"
			class="com.notekeeper.controller.LoginAction" method="index">
			<interceptor-ref name="loginStack"/>
			<result name="success">/WEB-INF/index.jsp</result>
		</action>

		<action name="logout"
			class="com.notekeeper.controller.LoginAction" method="logout">
			<result name="success" type="redirect">indexaction.action</result>
		</action>

	</package>
	
	<package name="asda" extends="json-default" namespace="/">

		<action name="getnotes" class="com.notekeeper.controller.GetNotesAction" method="getNotes">
			<result name="SUCCESS" type="json"></result>
		</action>
		
		<action name="getsession" class="com.notekeeper.controller.SessionAction" method="execute">
			<result name="SUCCESS" type="json"></result>
		</action>
		
		<action name="clearnotes" class="com.notekeeper.controller.ClearNotesAction" method="clearNotes">
			<result name="SUCCESS" type="json"></result>
		</action>
		
		
		
	</package>
	<package name="asd" extends="json-default" namespace="/">
		<interceptors>
			<interceptor-stack name="defaultStack">
				<interceptor-ref name="json">
					<param name="enableSMD">true</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<action name="savenotes" class="com.notekeeper.controller.SaveNotesAction"
			method="saveNotes">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json" />
		</action>
		<action name="deletenote" class="com.notekeeper.controller.DeleteNoteAction"
			method="deleteNote">
			<interceptor-ref name="json">
				<param name="enableSMD">true</param>
			</interceptor-ref>
			<result type="json" />
		</action>
	</package>

</struts>